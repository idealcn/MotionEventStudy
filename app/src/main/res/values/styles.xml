<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="MyHorizontalScrollView">
       <attr name="menu_right_padding"/>
    </declare-styleable>

    <declare-styleable name="LinearIndicator">
        <attr name="indicator_line_height" />
        <attr name="indicator_line_width"/>
        <attr name="indicator_line_color"/>
        <attr name="indicator_text_color"/>
        <attr name="indicator_text_selected_color"/>
        <attr name="indicator_text_size"/>
        <attr name="indicator_text"/>
        <attr name="indicator_scroll_mode"/>

    </declare-styleable>
</resources>
